doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(href='/index.css' rel='stylesheet')  
  script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
  title COVID REGISTRATION FORM
.container
  .row
    .col-md-10
      img(src='/images/header-images/form-header-image.png')
      h4  MINISTRY OF HEALTH
      h3
        b COVID-19 (CORONA VIRUS)
      h4  VIRUS-TEST REGISTRATION FORM
      if alert=='success'
        div.alert.alert-success Regsitered successfully!
      form(name='registration' action='/register' method='POST' onsubmit='return validation();')
        .row
          .col-md-6
            label Surname
            input.form-control(type='text' name='surname' onblur='val1()')
            p.one
          .col-md-6
            label Given name
            input.form-control(type='text' name='givenname' onblur='val2()')
            p.two
        .row
          .col-md-6
            label Date of Birth
            input.form-control(type='date' name='date' onblur='val3()')
            p.three
          .col-md-6
            label Place of residence
            input.form-control(type='text' name='place' onblur='val4()')
            p.four
        .row
          .col-md-6
            label Occupation
            input.form-control(type='text' name='occupation' onblur='val5()')
            p.five
          .col-md-6
            label Nationality
            input.form-control(type='text' name='nationality' onblur='val6()')
            p.six
        .row
          .col-md-12
            label Gender
            br
            |                             Male :
            input(type='radio' name='gender' value='male' checked='' style='margin-right:50px')
            |                             Female :
            input(type='radio' name='gender' value='female')
        .row
          .col-md-12
            label Category
            select.form-control(name='category' onblur='val7()')
              option(value='') --select Category--
              option(value='returnee') Returnee
              option(value='alert') Alert
              option(value='Volunteer') Volunteer
              option(value='contact') Contact
            p.seven
        button.btn.btn-primary(type='submit') Register
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
script(src='/index.js')
