doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  title Registration Form
.container
  header
    img(src='./form-header-image.png')
    p Ministry of Health
    h1
      | COVID-19(CORONA VIRUS)
      p Virus-Test Registration Form
  .container-fluid
    form(action='/' method='post' name="reg")
      .row
        .col-6
          label(for='surname') Surname
          input.form-control(type='text' name='surname' id='sname')
          span#surnameErr
        .col-6
          label(for='givenname') Given Name
          input.form-control(type='text' name='givenname' id='gname')
          span#givennameErr
      .row
        .col-6
          label(for='dob') Date of Birth
          input.form-control(type='date' name='dob' id='dob')
          span#dobErr
        .col-6
          label(for='residence') Place of Residence
          input.form-control(type='text' name='residence' id='residence')
          span#residenceErr
      .row
        .col-6(l='')
          label(for='occupation') Occupation
          input.form-control(type='text' name='occupation' id='occupation')
          span#occupationErr
        .col-6
          label(for='nationality') Nationality
          input.form-control(type='text' name='nationality' id='nationality')
          span#nationalityErr
      .row
        .col-6 Gender
      .row
        .col-6
          label.form-check-label(for='gender') Male
          input.form-check-input(type='radio' name='gender')
        .col-6
          label.form-check-label(for='gender') Female
          input.form-check-input(type='radio' name='gender')
      .row
        .col-12
          label(for='category') Category
          select#category-select.form-select(name='category')
            option(selected='') --Select Category--
            option(value='Returnee') Returnee
            option(value='Contact') Contact
            option(value='Alert') Alert
            option(value='Volunteer') Volunteer
      div
        button.btn btn-primary(type='submit')
          | Register
  script(src="validation.js") 