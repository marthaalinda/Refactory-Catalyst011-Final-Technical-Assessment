doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Virus-Test Registration form
    // Bootstrap
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css', integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l', crossorigin='anonymous')
    // Font Awesome
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.11.2/css/all.css')
    // Style.css
    link(rel='stylesheet', href='/public/style.css')
  body
    .Container
      .form-group.col-md-6
        div(style='float: right;')
          .card-header
            img(src='/images/form-header-image.png', width='600', height='100')
            br
            |  
            center Ministry Of Health
            center
              b COVID-19 (CORONA VIRUS)
            center Virus-Test Registration Form
          form(action='/', method='POST')
            .form-row
              .form-group.col-md-6
                label(for='surname') Surname
                input#inputEmail4.form-control(type='text', name='surname', required='', oninvalid="this.setCustomValidity('Enter Surname')", oninput="this.setCustomValidity('')")
              .form-group.col-md-6
                label(for='givenname') Given Name
                input.form-control(type='text', name='givenname', required='', oninvalid="this.setCustomValidity('Enter Given Name')", oninput="this.setCustomValidity('')")
            .form-row
              .col.form-group.col-md-6
                label(for='dob') Date of Birth: 
                input.form-control(type='date', name='dob', required='', oninvalid="this.setCustomValidity('Enter date Of Birth')", oninput="this.setCustomValidity('')")
              .form-group.col-md-6
                label(for='residence') Place of Residence
                input.form-control(type='text', name='residence', required='', oninvalid="this.setCustomValidity('Enter Residence')", oninput="this.setCustomValidity('')")
            .form-row
              .form-group.col-md-6
                label(for='name') Occupation
                input#inputEmail4.form-control(type='text', name='occupation', required='', oninvalid="this.setCustomValidity('Enter Occupation')", oninput="this.setCustomValidity('')")
              .form-group.col-md-6
                label(for='telno') Nationality
                input.form-control(type='text', name='nationality', required='', oninvalid="this.setCustomValidity('Enter Nationality')", oninput="this.setCustomValidity('')")
              .form-row
                .col.form-group
                  label(for='gender') Gender: 
                  div
                    label.form-check.form-check-inline
                      input.form-check-input(type='radio', name='gender', value='Female')
                      span.form-check-label Female
                    label.form-check.form-check-inline
                      input.form-check-input(type='radio', name='gender', value='Male')
                      span.form-check-label Male
            .form-group
              label(for='category') Category
              select.form-control(name='category')
                option(selected='') Select Category
                option Sick 
                option Alive
                option Sales Agent
            .form-row
            .col.form-group
              button.btn.btn-primary.btn-block(type='submit') Register
    // Scripts
    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js', integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js', integrity='sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns', crossorigin='anonymous')
    // Custom Script
    script(src='script.js')